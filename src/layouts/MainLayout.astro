---
const { title = 'Ι. Γκούθας Λογιστικό Γραφείο' } = Astro.props;
---

<!DOCTYPE html>
<html lang="el">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{title}</title>
	<meta name="description" content="Το λογιστικό γραφείο του Ιωάννη Γκούθα παρέχει αξιόπιστες φοροτεχνικές και λογιστικές υπηρεσίες στην Αθήνα με έμφαση στην οργάνωση και την εξατομίκευση." />

	<link rel="stylesheet" href="/src/styles/global.css" />
	<!-- Swiper CSS -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
	<!-- Google Fonts -->
	<link href="https://fonts.googleapis.com/css2?family=Inter&family=Montserrat:wght@600&display=swap" rel="stylesheet">
	<style>
		body {
			font-family: 'Inter', sans-serif;
		}
		h1, h2, h3, .logo {
			font-family: 'Montserrat', sans-serif;
		}
	</style>
	<!-- Cookie Consent -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.css" />
	<script src="https://cdn.jsdelivr.net/npm/cookieconsent@3/build/cookieconsent.min.js"></script>
	<script is:inline>
		window.addEventListener("load", function () {
			window.cookieconsent.initialise({
				palette: {
					popup: { background: "#000" },
					button: { background: "#00bfff" }
				},
				theme: "classic",
				position: "bottom",
				content: {
					message: "Αυτή η ιστοσελίδα χρησιμοποιεί cookies για τη βελτίωση της εμπειρίας σας.",
					dismiss: "ΟΚ",
					link: "Μάθετε περισσότερα",
					href: "/privacy-policy"
				}
			});
		});
	</script>
</head>
<body>
<slot name="header" />
<main>
	<slot />
</main>
<slot name="footer" />

<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
<script is:inline>
	new Swiper('.swiper', {
		loop: true,
		spaceBetween: 20,
		slidesPerView: 1,
		navigation: {
			nextEl: '.swiper-button-next',
			prevEl: '.swiper-button-prev',
		},
	});
</script>
</body>
</html>
